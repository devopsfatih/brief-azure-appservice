# =============================================================================
# Dockerfile.test - Environnement Test
# =============================================================================

FROM node:18-alpine

# Install test utilities
RUN apk add --no-cache curl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (for testing)
RUN npm ci

# Copy source code
COPY . .

# Test environment
ENV NODE_ENV=test
ENV PORT=3000

# Create user for light security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Test-specific healthcheck (less frequent)
HEALTHCHECK --interval=45s --timeout=15s --start-period=10s --retries=2 \
  CMD curl -f http://localhost:3000/health || exit 1

# Expose port
EXPOSE 3000

# Start normally (not with nodemon)
CMD ["npm", "start"]